{
    "ts-node": {
        "esm": true,
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "declaration": false,
        "importHelpers": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}